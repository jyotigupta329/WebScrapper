<style media="screen">
    .card {
        border: 1px solid rgb(233, 213, 213);
        margin: 10px;
        padding: 10px;
    }

    a {
        margin: 5px;
    }

    .comment-form-class {
        display: none
    }
</style>
<h1>News</h1>
{{#if data.length}} {{#each data}}
    <div class="card">

        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.link}}</p>
        </div>
        <h5 class="card-footer">
            <button id="saveArticle" data-id="{{this._id}}">save article</button>
        </h5>
    </div>

{{/each}} {{else}}
    <h3>No records found.</h3>
{{/if}}
